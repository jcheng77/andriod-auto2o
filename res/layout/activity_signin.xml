            <Button
                android:id="@+id/signinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/signin_btn_style"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="登录"
