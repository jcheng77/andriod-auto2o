<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/order_status_actionbar"
        layout="@layout/actionbar" />

    <RelativeLayout
        android:id="@+id/order_status_carname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_status_actionbar" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Volve" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/order_status_scroolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_status_carname"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/order_status_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bargainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/beginbuycar_btn_style"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Bargin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Cancle" />
    </LinearLayout>

    <ListView
        android:id="@+id/dealer_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/order_status_bottom"
        android:layout_below="@id/order_status_carname" >
    </ListView>

</RelativeLayout>